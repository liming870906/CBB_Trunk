<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3f4f8">

    <LinearLayout
        android:id="@+id/activity_audio_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f4f8"
        android:orientation="vertical"
        tools:context="com.tingtingfm.cbb.ui.activity.AudioInformationActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17.7"
            android:text="@string/audio_info_name_text"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/text_size_42" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:layout_marginTop="@dimen/dp_9.3"
            android:background="@color/color_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46.7"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_audio_info_audion_name_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/text_size_42" />

            <com.tingtingfm.cbb.ui.view.SpaceEditText
                android:id="@+id/et_audio_info_audio_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_audio_info_audion_name_count"
                android:background="@null"
                android:inputType="textPersonName"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_20314c"
                android:textSize="@dimen/text_size_44" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/color_d2d2d2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17.7"
            android:text="@string/audio_info_caifang_person"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/text_size_42" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:layout_marginTop="@dimen/dp_9.3"
            android:background="@color/color_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46.7"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_audio_info_caifang_person_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="18"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/text_size_42" />

            <com.tingtingfm.cbb.ui.view.SpaceEditText
                android:id="@+id/et_audio_info_caifang_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_audio_info_caifang_person_count"
                android:background="@null"
                android:inputType="textPersonName"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_20314c"
                android:textSize="@dimen/text_size_44"
                android:hint="@string/audio_info_caifang_default_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/color_d2d2d2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17.7"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/audio_info_caifang_event_text"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/text_size_42" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/color_d2d2d2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_13">
            <com.tingtingfm.cbb.ui.view.SpaceEditText
                android:id="@+id/et_audio_info_caifang_event"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_125.7"
                android:background="@android:color/transparent"
                android:gravity="left|top"
                android:lineSpacingExtra="@dimen/dp_8.3"
                android:maxLength="100"
                android:textColor="@color/color_20314c"
                android:textSize="@dimen/text_size_44"
                android:hint="@string/audio_info_caifang_event_default_text"/>

            <TextView
                android:id="@+id/tv_audio_info_caifang_event_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="right|center_vertical"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/text_size_42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.3"
                android:background="@color/color_d2d2d2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17.7"
            android:text="@string/audio_info_keyword_text"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/text_size_42" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:layout_marginTop="@dimen/dp_9.3"
            android:background="@color/color_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46.7"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_audio_info_keyword_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="18"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/text_size_42" />

            <com.tingtingfm.cbb.ui.view.SpaceEditText
                android:id="@+id/et_audio_info_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_audio_info_keyword_count"
                android:background="@null"
                android:inputType="textPersonName"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_20314c"
                android:textSize="@dimen/text_size_44"
                android:hint="@string/audio_info_keyword_default_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/color_d2d2d2" />

    </LinearLayout>
</ScrollView>