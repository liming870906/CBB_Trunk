<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_material_manager_layout"
    android:layout_width="match_parent"
    android:layout_height="41.3dp"
    android:background="@color/color_697fb4" >

    <LinearLayout
        android:id="@+id/material_manager_title_left_layout"
        android:layout_width="57dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_20"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/material_manager_title_left1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_selector" />
        <TextView
            android:id="@+id/material_manager_title_left3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_54"
            android:visibility="gone"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/material_manager_title_right_layout"
        android:layout_width="57dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/material_manager_title_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/material_manager_title_right3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/app_padding_right"
            android:textColor="@color/tv_color_fff_seletor"
            android:textSize="@dimen/text_size_54"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/material_manager_title_right_layout"
        android:layout_toRightOf="@id/material_manager_title_left_layout"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_material_manager_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="235dp"
            android:ellipsize="middle"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_54"
            android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_material_manager_title_content"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_26.3"
                android:background="@drawable/material_title_tag_background"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_material_manager_title_audio"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/material_manage_title_audio"
                    android:textSize="@dimen/text_size_42"
                    android:textColor="@color/color_697fb4"
                    android:background="@drawable/material_title_tag_left_bg"/>
                <Button
                    android:id="@+id/btn_material_manager_title_phone"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/material_manage_title_phone"
                    android:textSize="@dimen/text_size_42"
                    android:textColor="@color/white"
                    android:background="@color/transparent" />
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>