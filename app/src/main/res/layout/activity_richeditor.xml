<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tingtingfm.cbb.ui.view.SpaceEditText
                    android:id="@+id/richeditor_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12.7"
                    android:layout_marginTop="@dimen/dp_12.7"
                    android:background="@color/white"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:maxLength="40"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_56"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/richeditor_title_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/manuscript_input_title"
                    android:textColor="@color/color_c8c8c8"
                    android:textSize="@dimen/text_size_46"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/richeditor_title_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12.7"
                android:layout_marginTop="@dimen/dp_12.7"
                android:background="@color/white"
                android:hint="@string/manuscript_input_title"
                android:lineSpacingExtra="@dimen/dp_5"
                android:maxLength="40"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_c8c8c8"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_56"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43.7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_21"
            android:text="@string/manuscript_auther"
            android:textColor="@color/color_afafaf"
            android:textSize="@dimen/text_size_44" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tingtingfm.cbb.ui.view.SpaceEditText
                android:id="@+id/richeditor_auther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:hint="@string/manuscript_input_auther"
                android:lines="1"
                android:maxLength="14"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_c8c8c8"
                android:textSize="@dimen/text_size_44" />

            <TextView
                android:id="@+id/richeditor_auther_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:hint="@string/manuscript_input_auther"
                android:lines="1"
                android:maxLength="14"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_c8c8c8"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_44"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:background="@color/color_f9f9f9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_21"
            android:text="@string/manuscript_textNum"
            android:textColor="@color/color_afafaf"
            android:textSize="@dimen/text_size_44" />

        <TextView
            android:id="@+id/richeditor_current_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_44" />
    </LinearLayout>

    <View style="@style/line_style" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_weight="1">

        <com.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15.7" />

        <com.wasabeef.richeditor.RichEditor
            android:id="@+id/editor_onlyShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15.7"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/richeditro_sub_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13">

            <LinearLayout
                android:id="@+id/richeditor_send_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:background="@drawable/b697fb4_526592_bg_selector"
                android:gravity="center">

                <TextView
                    android:id="@+id/richeditor_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manuscript_submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_44" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/richeditor_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/richeditor_postilLayout"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/manuscript_postil_background"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/richeditor_postilTxtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manuscript_look"
                        android:textColor="@color/color_7892d1"
                        android:textSize="@dimen/text_size_41" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/richeditor_recall_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_34"
                    android:layout_weight="1"
                    android:background="@drawable/b697fb4_526592_bg_selector"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/richeditor_recall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manuscript_recallText"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_44" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/richeditor_quickApprove_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/b697fb4_526592_bg_selector"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/richeditor_quickApprove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manuscript_quickApprove"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_44" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_saft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>

        <ImageButton
            android:id="@+id/action_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/manuscript_accessory" />
    </LinearLayout>
</LinearLayout>


