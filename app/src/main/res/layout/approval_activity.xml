<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_26.3"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/approval_layout_background"
                    android:gravity="center">

                    <Button
                        android:id="@+id/activity_approval"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent"
                        android:background="@color/color_697fb4"
                        android:text="@string/manuscript_approval"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_40" />

                    <Button
                        android:id="@+id/activity_approvaled"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="@string/manuscript_approvaled"
                        android:textColor="@color/color_697fb4"
                        android:textSize="@dimen/text_size_40" />
                </LinearLayout>
            </FrameLayout>

            <View style="@style/line_style"></View>
            <FrameLayout
                android:id="@+id/approval_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f3f4f8"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
