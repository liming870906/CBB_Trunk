<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/approval_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20.3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/watch_img"
            android:layout_width="@dimen/dp_39.3"
            android:layout_height="@dimen/dp_39.3"
            android:layout_marginRight="@dimen/dp_11.7"
            android:background="@drawable/approval_head" />

        <TextView
            android:id="@+id/watch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5.6"
            android:layout_toRightOf="@id/watch_img"
            android:text="AAA"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_42" />

        <TextView
            android:id="@+id/watch_approval_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5.6"
            android:layout_toRightOf="@id/watch_name"
            android:text="BB"
            android:textColor="@color/color_da4453"
            android:textSize="@dimen/text_size_42" />

        <TextView
            android:id="@+id/watch_approval_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watch_name"
            android:layout_toRightOf="@id/watch_img"
            android:text="CCC"
            android:textColor="@color/color_afafaf"
            android:textSize="@dimen/text_size_28" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_64"
        android:layout_marginRight="@dimen/dp_13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/watch_approval_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12.7"
            android:text="DDD"
            android:textColor="@color/color_444444"
            android:lineSpacingExtra="@dimen/dp_7"
            android:textSize="@dimen/text_size_44" />

        <RelativeLayout
            android:id="@+id/watch_audio_rlayout"
            android:layout_width="@dimen/dp_187.3"
            android:layout_height="@dimen/dp_37.6"
            android:layout_marginTop="@dimen/dp_15.3">

            <ImageView
                android:id="@+id/watch_approval_audio"
                android:layout_width="@dimen/dp_187.3"
                android:layout_height="@dimen/dp_37.6"
                android:background="@drawable/watch_audio_layout_selector" />

            <ImageView
                android:id="@+id/watch_approval_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17.7"
                android:src="@drawable/approval_audio3" />

            <TextView
                android:id="@+id/watch_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/color_8e9396"
                android:text="120''" />

        </RelativeLayout>

    </LinearLayout>

    <View style="@style/line_style" />
</LinearLayout>
