<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_37"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/et_audio_record_dialog_background"
        android:gravity="center_vertical">
        <EditText xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/et_dialog_audio_record_file_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_20314c"
            android:textSize="@dimen/text_size_46"
            android:textColorHint="@color/color_c8c8c8"
            android:background="@null"
            android:singleLine="true"/>
        <ImageButton
            android:id="@+id/ib_dialog_audio_record_clear_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_remove"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>