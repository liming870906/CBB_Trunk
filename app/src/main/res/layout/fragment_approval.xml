<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/approval_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f3f4f8">
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/approval_listView"
        android:layout_width="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/approval_no_data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f4f8"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/approval_no_data_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_130"
            android:src="@drawable/msg_data_null" />

        <TextView
            android:id="@+id/approval_no_data_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/manuscript_approval_no_data1"
            android:textColor="@color/color_20314c"
            android:textSize="@dimen/text_size_56" />
    </LinearLayout>
</FrameLayout>
