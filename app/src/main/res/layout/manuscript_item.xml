<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/manuscript_flagtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_13"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/color_ececec"
        android:textSize="@dimen/text_size_42"
        android:textColor="@color/color_7a7c7d"
        android:text="@string/manuscript_loc"/>
    <RelativeLayout
        android:id="@+id/manuscript_rLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/manuscript_list_bg_selector"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13">
        <ImageView
            android:id="@+id/manuscript_info_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_16"
            android:src="@drawable/meg_select" />

        <RelativeLayout
            android:id="@+id/manuscript_item_rlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/manuscript_info_flag"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_13">

            <TextView
                android:id="@+id/manuscript_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_13"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_3.4"
                android:maxLines="2"
                android:text="asdfasdfasdfasd"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_50" />

            <TextView
                android:id="@+id/manuscript_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/manuscript_item_title"
                android:layout_marginBottom="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_14"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="asdfasdfasdfasd"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/text_size_38"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/manuscript_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/manuscript_item_text"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_5.7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manuscript_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="asdfasdfasdfasd"
                    android:textColor="@color/color_afafaf"
                    android:textSize="@dimen/text_size_40" />
                <ImageView
                    android:id="@+id/manuscript_phoneFlag"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"/>
                <ImageView
                    android:id="@+id/manuscript_uploadState"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/manuscript_loading"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_18"
                    />
                <TextView
                    android:id="@+id/manuscript_submited_textView"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_18"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_34" />
            </LinearLayout>

            <View
                style="@style/line_style3"
                android:layout_below="@id/manuscript_layout"
                android:layout_marginTop="@dimen/dp_14"></View>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

