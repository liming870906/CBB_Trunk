<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_all_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_62"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20">

    <RelativeLayout
        android:id="@+id/message_llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_info_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_14"
            android:paddingTop="@dimen/dp_16"
            android:src="@drawable/meg_select" />

        <ImageView
            android:id="@+id/message_info_imageView"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/message_info_flag"
            android:background="@color/color_99cbd4e3" />

        <TextView
            android:id="@+id/message_red"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignRight="@id/message_info_imageView"
            android:layout_alignTop="@id/message_info_imageView"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/message_num"
            android:minWidth="@dimen/dp_12" />

        <LinearLayout
            android:id="@+id/message_info_titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12.7"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/message_info_imageView"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_weight="1"
                    android:text="@string/audio_record_pause"
                    android:textColor="@color/color_20314c"
                    android:textSize="@dimen/text_size_48" />

                <TextView
                    android:id="@+id/message_info_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2017-1-3 12:00:01"
                    android:textColor="@color/color_afafaf"
                    android:textSize="@dimen/text_size_32" />
            </LinearLayout>

            <TextView
                android:id="@+id/message_info_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingRight="@dimen/dp_20"
                android:text="@string/audio_record_dialog_file_exists_tips"
                android:textColor="@color/color_9da1af"
                android:textSize="@dimen/text_size_40" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_style" />
</LinearLayout>
