<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f3f4f8"
    android:id="@+id/not_net_layout"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_marginTop="@dimen/dp_130"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/all_not_net"/>
    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_56"
        android:text="@string/not_net"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_13"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/not_net_imageView"
            android:layout_width="wrap_content"
            android:src="@drawable/msg_reload"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_36"
            android:text="@string/try_click"/>
    </LinearLayout>
</LinearLayout>
