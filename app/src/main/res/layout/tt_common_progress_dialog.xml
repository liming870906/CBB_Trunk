<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="52dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bg_circle_progress_shape"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/common_progress_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_center"/>

    <TextView
        android:id="@+id/common_progress_message"
        android:layout_marginLeft="11dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_44"
        android:text="@string/nowisloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>