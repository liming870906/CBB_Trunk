<resources>

    <style name="TTAlertDialog">
        <item name="fullDark">@drawable/dialog_rectangle</item>
        <item name="topDark">@drawable/dialog_rectangle_top</item>
        <item name="centerDark">@drawable/dialog_rectangle_center</item>
        <item name="bottomDark">@drawable/dialog_rectangle_bottom</item>
        <item name="fullBright">@drawable/dialog_rectangle</item>
        <item name="topBright">@drawable/dialog_rectangle_top</item>
        <item name="centerBright">@drawable/dialog_rectangle_center</item>
        <item name="bottomBright">@drawable/dialog_rectangle_bottom</item>
        <item name="bottomMedium">@drawable/dialog_rectangle_bottom</item>
        <item name="centerMedium">@drawable/dialog_rectangle_center</item>
    </style>

    <style name="TTDialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="TTDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/TTDialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>